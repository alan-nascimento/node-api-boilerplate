{
  "name": "@node-api/boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for Node REST API using TypeScript, Express and Docker.",
  "license": "MIT",
  "author": "Alan Nascimento - https://github.com/alan-nascimento",
  "private": true,
  "main": "server.ts",
  "scripts": {
    "dev": "nodemon --exec babel-node --extensions '.ts, .js' ./src/server.ts",
    "start": "node ./dist/server.js",
    "build": "babel src --out-dir dist --copy-files --extensions '.ts, .js'",
    "prebuild": "rimraf dist"
  },
  "dependencies": {
    "@babel/runtime": "^7.7.7",
    "dotenv": "^8.2.0",
    "express": "^4.17.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-typescript": "^7.7.7",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/node": "^13.1.2",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.2",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.4"
  }
}
